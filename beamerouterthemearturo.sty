\usepackage{tikz}

\mode<presentation>

%Declaracion de logo para pie de diapositiva
\DeclareOptionBeamer{logo}{\def\beamer@arturo@logo{#1}}
\ExecuteOptionsBeamer{logo=} % Default value is empty
\ProcessOptionsBeamer

% Configuracion de la portada de la presentacion
\setbeamertemplate{title page}
{
{
	\centering
	\usebeamerfont{title}{\usebeamercolor[fg]{title}\inserttitle}\par
	\usebeamerfont{subtitle}{\usebeamercolor[fg]{subtitle}\insertsubtitle}\par
	\bigskip
	\centering
	\usebeamerfont{author}\insertauthor\par
	\usebeamerfont{institute}\insertinstitute\par
	\centering
	\usebeamerfont{date}\insertdate\par
}

}

%Configuracion del pie de diapositiva
\setbeamertemplate{footline}
{%
	\leavevmode%
	\hbox{%
		\begin{beamercolorbox}[wd=0.98\paperwidth,ht=2.25ex,dp=1ex,center]{pagenumber}%
			\insertframenumber{}\hspace*{1ex}
		\end{beamercolorbox}
		\if \beamer@arturo@logo\@empty
		\else
		\llap{\includegraphics[height=0.8cm]{\beamer@arturo@logo}}
		\fi
	}%
}


\mode<all>
\endinput